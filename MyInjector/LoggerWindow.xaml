<Window x:Class="MyInjector.LoggerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyInjector"
        mc:Ignorable="d"
        Title="Log" Height="250" Width="800"
        Background="Black" BorderThickness="0">
    <Grid>
        <RichTextBox Background="White" IsReadOnly="True" FontFamily="Consolas" FontSize="15" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <FlowDocument Name="DataArea">
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
