<UserControl x:Class="MyInjector.MethodNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyInjector"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="0">
        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MaxWidth="100"/>
                <ColumnDefinition Width="3*" MaxWidth="150"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Name" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Name="TypeName"/>
            <ComboBox HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Column="1" Name="Methods" SelectionChanged="Methods_SelectionChanged"/>
            <Label Content="Description" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Name="Description"/>
        </Grid>
    </Border>
</UserControl>
